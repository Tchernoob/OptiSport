{% extends 'base.html.twig' %}

 {% block javascripts %}
        {{ encore_entry_script_tags('activateModules') }}
		{{ parent() }}
 {% endblock %}

{% block title %}{{partner.name}}{% endblock %}

{% block body %}
 <h3>{{ partner.name }}</h3>
 <p> {{ partner.description }}</p>

 {% if structures is not empty  %}
    <h4>Structures</h4>
   <ul>
    {% for structure in partner.structures  %}
    <li> {{ structure.name }}</li>
    {% endfor %}
   </ul>   
 {% endif %}
   <ul>
    {% for module in mods  %}
    <li> {{ module }}</li>
      {% if module in partner.mods %}
        <a href="{{ path('deactivate_mod', {id: partner.id, mod: module.id})}}">Désactiver</a>
         {% else %}
        <a href="{{ path('activate_mod', {id: partner.id, mod: module.id})}}">Activer</a>
      {% endif %}
        
    {# <button data-id="{{module.id}}" class="activationModule">Désactiver</button> #}
  
    {% endfor %}
   </ul>
    <a class="btn btn-outline-success btn-lg" href="{{ path('new_structure', {id: partner.id}) }}">Ajouter une structure</a>
{% endblock %}
